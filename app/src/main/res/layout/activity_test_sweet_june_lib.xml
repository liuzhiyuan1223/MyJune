<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test_my_sweet_june_lib.TestSweetJuneLibActivity">


    <TextView
        android:id="@+id/mTestSweetJuneLib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试SweetJune开源库"
        android:textSize="@dimen/_20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="@dimen/_10_dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/mStartTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/default_bg"
        android:text="创建悬浮窗"
        android:textSize="@dimen/_16sp"
        android:gravity="center"
        android:padding="@dimen/_10_dp"
        android:layout_marginBottom="@dimen/_10_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>